<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- 将splash图片设置在这，这样这张图片取代白屏 -->
        <item name="android:windowBackground">@color/main_color</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 或者是将主题设置成透明，虽然点击图标会有点小小的卡顿，但是用户体验不影响 -->
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>
    <!-- Base application theme. -->
    <style name="SelTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <!-- dialog背景样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="HLinearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/usual_padding</item>
        <item name="android:paddingTop">@dimen/usual_middle_margin_or_padding</item>
        <item name="android:paddingRight">@dimen/usual_padding</item>
        <item name="android:paddingBottom">@dimen/usual_middle_margin_or_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textSize">@dimen/usual_text_size</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/usual_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:textSize">@dimen/usual_small_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="rowDivider">
        <item name="android:background">@color/gray_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>
    <!-- CustomRadiotheme -->
    <style name="CustomRadioTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radio_style</item>
    </style>
</resources>
